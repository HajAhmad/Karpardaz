    <!--    android:text="@string/layout_login_password_recovery_title"/>-->

    <com.google.android.material.button.MaterialButton
        android:id="@+id/layout_login_login_action"
        android:layout_width="112dp"
        android:layout_height="58dp"
        android:layout_marginTop="84dp"
        android:text="@string/all_login_title_short" />

</LinearLayout>